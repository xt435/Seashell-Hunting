<% include partials/header %>

    <div class="container">
        <header class="jumbotron">
            <div class="container">
                <h1>Welcome to Seashell Hunting!</h1>
                <p>View our hand-picked hunting grounds from all over the world</p>
                <p>
                    <a class="btn btn-primary btn-large" href="/hunting_grounds/new">Add A New Hunting Ground</a>
                </p>                
            </div>
        </header>   
        
        <div class="row" style="display:flex; flex-wrap: wrap;">
            <% huntingGrounds.forEach(function(huntingGround){ %>
                <div class="col-md-3 col-sm-6">
                    <div class="thumbnail">
                        <img src= "<%= huntingGround.image %>" >
                        <div class="caption">
                            <h4><%= huntingGround.name %></h4>
                        </div>
                        <p>
                            <a href="/hunting_grounds/<%=huntingGround._id %>" class="btn btn-primary">More Info</a>
                        </p>
                    </div>
                </div>
            <% }); %>  
        </div>
    </div>   

<% include partials/footer %>